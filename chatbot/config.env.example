# ElevateHub Chatbot Configuration
# Copy this file to .env and update with your actual values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
DEBUG=false

# CORS Settings (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://elevatehub.app

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/elevatehub_chatbot
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_TTL=3600

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# LangChain Configuration
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langchain-api-key-here
LANGCHAIN_PROJECT=ElevateHub-Chatbot

# Vector Database (ChromaDB)
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=elevatehub_knowledge
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Knowledge Base
KNOWLEDGE_BASE_PATH=./data/knowledge
KNOWLEDGE_REFRESH_INTERVAL=3600

# Intent Classification
INTENT_MODEL_PATH=./models/intent_classifier
INTENT_CONFIDENCE_THRESHOLD=0.7
FALLBACK_INTENT=general_help

# Response Generation
RESPONSE_MAX_LENGTH=500
RESPONSE_TEMPERATURE=0.7
CONTEXT_WINDOW_SIZE=10

# Session Management
SESSION_TIMEOUT=1800
MAX_SESSIONS_PER_USER=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/chatbot.log

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_ENDPOINT=

# External Service Integrations
COGNIZANT_API_BASE_URL=
COGNIZANT_API_KEY=

INSURANCE_API_URL=
INSURANCE_API_KEY=

TEAM_DIRECTORY_URL=
TEAM_DIRECTORY_API_KEY=

PROJECT_MANAGEMENT_URL=
PROJECT_MANAGEMENT_API_KEY=

LMS_API_URL=
LMS_API_KEY= 